---
import { Image } from 'astro:assets';
import mail from '../assets/mail.svg';
import phone from '../assets/phone.svg';
import linkedin from '../assets/linkedin.svg';
import github from '../assets/github.svg';
import Form from '../components/Form.astro';
---

<section class="contact" id="contact">
  <h2>Want to get in touch?</h2>
  <Form />
  <div class="contact-links">
    <a href="mailto:alwyn411@gmail.com" class="contact-item" aria-label="Email">
      <Image src={mail} alt="email" width={30} height={30} />
    </a>
    <a href="tel:+916383028744" class="contact-item" aria-label="Phone">
      <Image src={phone} alt="phone" width={30} height={30} />
    </a>
    <a
      href="https://www.linkedin.com/in/v-alwyn-yemlin-raj-1430b41b9/"
      class="contact-item"
      aria-label="LinkedIn"
    >
      <Image src={linkedin} alt="linkedin" width={30} height={30} />
    </a>
    <a href="https://github.com/Alwyn-411" class="contact-item" aria-label="GitHub">
      <Image src={github} alt="github" width={30} height={30} />
    </a>
  </div>
</section>

<style>
  .contact {
    padding: 4rem 1rem;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact h2 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    margin-bottom: 2rem;
    color: var(--secondary-color);
    position: relative;
    display: inline-block;
  }

  .contact h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background-color: var(--secondary-color);
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .contact-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    border-radius: 8px;
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    background-color: rgba(255, 255, 255, 0.05);
    min-width: 120px;
    text-decoration: none;
  }

  .contact-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    background-color: rgba(255, 255, 255, 0.1);
  }

  .contact-item span {
    margin-top: 0.5rem;
    color: var(--text-color, #fff);
    font-size: 0.9rem;
  }

  @media (max-width: 600px) {
    .contact {
      padding: 3rem 1rem;
    }

    .contact-links {
      gap: 1rem;
    }

    .contact-item {
      min-width: 100px;
      padding: 0.8rem;
    }
  }
</style>
