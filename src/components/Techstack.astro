---
import { Image } from 'astro:assets';
import techstackImage from '../assets/techstack.svg';

const skills = [
  {
    category: 'Frontend',
    items: [
      { name: 'React', rating: 5 },
      { name: 'HTML', rating: 4 },
      { name: 'CSS', rating: 3 },
      { name: 'JavaScript', rating: 4 },
    ],
  },
  {
    category: 'Backend',
    items: [
      { name: 'Kotlin', rating: 4 },
      { name: 'Java', rating: 3 },
      { name: 'Python', rating: 4 },
      { name: 'Go', rating: 4 },
    ],
  },
  {
    category: 'Database & Cloud',
    items: [
      { name: 'NoSQL', rating: 4 },
      { name: 'SQL', rating: 3 },
      { name: 'AWS', rating: 4 },
      { name: 'Docker', rating: 4 },
    ],
  },
  {
    category: 'API & Protocols',
    items: [
      { name: 'RESTful', rating: 4 },
      { name: 'WebSockets', rating: 3 },
    ],
  },
];
---

<section class="techstack">
  <div class="image-holder">
    <div class="image-container">
      <Image
        src={techstackImage}
        alt="Developer illustration"
        width={700}
        height={700}
        loading="eager"
      />
      <div class="floating-badges">
        <div class="tech-badge">React</div>
        <div class="tech-badge">Kotlin</div>
        <div class="tech-badge">AWS</div>
        <div class="tech-badge">Python</div>
        <div class="tech-badge">Docker</div>
      </div>
    </div>
  </div>
  <div class="techstack-content">
    <h2 class="section-title">Tech Stack</h2>
    <p class="intro-text">
      I'm a dedicated developer with expertise in both frontend and backend technologies. Here's a
      breakdown of my technical proficiency:
    </p>

    <div class="skills-container">
      {
        skills.map((category) => (
          <div class="skill-category">
            <h3>{category.category}</h3>
            <div class="skills-grid">
              {category.items.map((skill) => (
                <div class="skill-item">
                  <div class="skill-header">
                    <span class="skill-name">{skill.name}</span>
                    <span class="skill-rating">{skill.rating}/5</span>
                  </div>
                  <div class="skill-bar">
                    <div class="skill-level" style={`width: ${skill.rating * 20}%`}>
                      {Array(skill.rating)
                        .fill(0)
                        .map(() => (
                          <span class="star">â˜…</span>
                        ))}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .techstack {
    display: flex;
    padding-inline: 5rem;
    justify-content: center;
    align-items: center;
    gap: 4rem;
    position: relative;
    overflow: hidden;
  }

  .techstack::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(var(--bg-gradient-1), 0.05),
      rgba(var(--bg-gradient-2), 0.1)
    );
    z-index: -1;
    border-radius: 2rem;
  }

  .techstack-content {
    flex: 1;
    max-width: 650px;
  }

  .image-holder {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    min-height: 500px;
  }

  .image-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  @keyframes pulse {
    0% {
      opacity: 0.5;
      transform: scale(0.95);
    }
    100% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  .floating-badges {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
    top: 0;
    left: 0;
  }

  .tech-badge {
    position: absolute;
    background: rgba(var(--bg-gradient-1), 0.8);
    color: var(--secondary-color);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    animation: float 6s infinite ease-in-out;
    z-index: 5;
    backdrop-filter: blur(4px);
  }

  .tech-badge:nth-child(1) {
    top: 15%;
    left: 5%;
    animation-delay: 0s;
  }

  .tech-badge:nth-child(2) {
    top: 20%;
    right: 5%;
    animation-delay: 1s;
  }

  .tech-badge:nth-child(3) {
    bottom: 30%;
    left: 5%;
    animation-delay: 2s;
  }

  .tech-badge:nth-child(4) {
    bottom: 20%;
    right: 5%;
    animation-delay: 3s;
  }

  .tech-badge:nth-child(5) {
    top: 5%;
    left: 50%;
    transform: translateX(-50%);
    animation-delay: 4s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
    color: var(--secondary-color);
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 4px;
    background: var(--secondary-color);
    border-radius: 2px;
  }

  .intro-text {
    color: var(--primary-color);
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .skills-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .skill-category h3 {
    color: var(--secondary-color);
    margin-bottom: 1rem;
    font-size: 1.3rem;
    border-bottom: 1px solid rgba(var(--bg-gradient-2), 0.3);
    padding-bottom: 0.5rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skill-item {
    background: rgba(var(--bg-gradient-1), 0.05);
    border-radius: 8px;
    padding: 1rem;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .skill-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .skill-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .skill-name {
    font-weight: 600;
    color: var(--primary-color);
  }

  .skill-rating {
    color: var(--tertiary-color);
    font-size: 0.9rem;
  }

  .skill-bar {
    height: 8px;
    background: rgba(var(--bg-gradient-2), 0.2);
    border-radius: 4px;
    overflow: hidden;
  }

  .skill-level {
    height: 100%;
    background: var(--secondary-color);
    border-radius: 4px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
  }

  .star {
    color: rgba(255, 255, 255, 0.8);
    font-size: 8px;
    line-height: 1;
  }

  @media (max-width: 1024px) {
    .techstack {
      padding: 4rem 3rem;
      gap: 2rem;
    }

    .skills-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    }

    /* Adjust badge positions for medium screens */
    .tech-badge:nth-child(1) {
      top: 10%;
      left: 2%;
    }

    .tech-badge:nth-child(2) {
      top: 15%;
      right: 2%;
    }

    .tech-badge:nth-child(3) {
      bottom: 25%;
      left: 2%;
    }

    .tech-badge:nth-child(4) {
      bottom: 15%;
      right: 2%;
    }

    .tech-badge:nth-child(5) {
      top: 2%;
    }
  }

  @media (max-width: 768px) {
    .techstack {
      flex-direction: column;
      padding: 3rem 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .image-holder {
      order: -1;
      margin-bottom: 2rem;
      min-height: 350px;
    }

    .skills-grid {
      grid-template-columns: 1fr 1fr;
    }

    .tech-badge {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }

    .tech-badge:nth-child(1) {
      top: 5%;
      left: 5%;
    }

    .tech-badge:nth-child(2) {
      top: 5%;
      right: 5%;
    }

    .tech-badge:nth-child(3) {
      bottom: 5%;
      left: 5%;
    }

    .tech-badge:nth-child(4) {
      bottom: 5%;
      right: 5%;
    }

    .tech-badge:nth-child(5) {
      top: 50%;
      left: 5%;
      transform: translateY(-50%);
    }
  }

  @media (max-width: 480px) {
    .techstack {
      padding: 2rem 1rem;
    }

    .section-title {
      font-size: 1.8rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .image-holder {
      min-height: 300px;
    }

    .tech-badge {
      font-size: 0.7rem;
      padding: 0.3rem 0.7rem;
    }

    .tech-badge:nth-child(1) {
      top: 10%;
      left: 2%;
    }

    .tech-badge:nth-child(2) {
      top: 10%;
      right: 2%;
    }

    .tech-badge:nth-child(3) {
      bottom: 10%;
      left: 2%;
    }

    .tech-badge:nth-child(4) {
      bottom: 10%;
      right: 2%;
    }

    .tech-badge:nth-child(5) {
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }
</style>
